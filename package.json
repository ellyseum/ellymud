{
  "name": "ellymud",
  "version": "1.1.0",
  "description": "Elly Mud / LLM Engineered Multi User Dungeon",
  "license": "AGPL-3.0-or-later",
  "engines": {
    "node": ">=20.19.0"
  },
  "main": "dist/server.js",
  "scripts": {
    "bootstrap": "./scripts/bootstrap.sh",
    "build": "tsc --build --verbose && npm run build:frontend && echo '✓ BUILD SUCCESS' || (echo '✗ BUILD FAILED' && exit 1)",
    "build:frontend": "vite build",
    "build:server": "tsc --build --verbose",
    "build-watch": "tsc --build --watch",
    "check-paired-docs": "./scripts/check-paired-docs.sh --all",
    "check-paired-docs-staged": "./scripts/check-paired-docs.sh --staged",
    "ci": "npm run lint && npm run typecheck && npm run validate && npm run build",
    "clean": "rm -rf dist",
    "clean-all": "rm -rf dist node_modules",
    "deps-check": "npx depcheck",
    "dev": "ts-node-dev --transpile-only --respawn src/server.ts",
    "dev-admin": "ts-node-dev --transpile-only --respawn src/server.ts -- -af",
    "dev-user": "ts-node-dev --transpile-only --respawn src/server.ts -- -u",
    "dev:frontend": "vite",
    "format": "prettier --write 'src/**/*.ts'",
    "format-check": "prettier --check 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts' --max-warnings 0",
    "lint-fix": "eslint 'src/**/*.ts' --fix",
    "outdated": "npm outdated",
    "prebuild": "npm run clean",
    "prepare": "husky",
    "prestart": "npm run build",
    "preview:frontend": "vite preview",
    "prod": "npm run build && NODE_ENV=production node --enable-source-maps dist/server.js",
    "release": "npm run ci && npm version patch && git push --follow-tags",
    "start": "node --enable-source-maps dist/server.js",
    "start-admin": "npm run build && node --enable-source-maps dist/server.js -af",
    "start-user": "npm run build && node --enable-source-maps dist/server.js -u",
    "test": "npm run typecheck && npm run validate && jest",
    "test-agents": ".github/agents/agent-tests/run-tests.sh",
    "test-agents-dry": ".github/agents/agent-tests/run-tests.sh --dry-run",
    "test-agents-list": ".github/agents/agent-tests/run-tests.sh --show-tests",
    "test-agents-validate": ".github/agents/agent-tests/run-tests.sh --validate",
    "test:all": "npm run typecheck && npm run validate && jest && jest --config jest.e2e.config.js",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:e2e:remote": "MCP_URL=http://localhost:3100 jest --config jest.e2e.config.js",
    "test:full": "npm run test:all && npm run test:integration",
    "test:integration": "./scripts/test-integration.sh",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "validate": "ts-node-dev --transpile-only src/utils/validateFiles.ts",
    "data:status": "npx ts-node scripts/data-migrate.ts status",
    "data:export": "npx ts-node scripts/data-migrate.ts export",
    "data:import": "npx ts-node scripts/data-migrate.ts import",
    "data:backup": "npx ts-node scripts/data-migrate.ts backup",
    "data:switch": "npx ts-node scripts/data-migrate.ts switch",
    "artifact:list": "./scripts/pipeline-artifacts-list.sh",
    "artifact:push": "./scripts/sync-to-hub.sh",
    "artifact:pull": "./scripts/sync-from-hub.sh",
    "artifact:push-dry": "./scripts/sync-to-hub.sh --dry-run",
    "artifact:pull-dry": "./scripts/sync-from-hub.sh --dry-run",
    "docker:build": "docker build -t ellymud:latest .",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps",
    "docker:restart": "docker compose restart",
    "docker:shell": "docker compose exec app /bin/sh",
    "docker:clean": "docker compose down -v --remove-orphans",
    "docker:rebuild": "docker compose down && docker compose build && docker compose up -d",
    "docker:up:postgres": "docker compose -f docker-compose.yml -f docker-compose.postgres.yml up -d",
    "docker:down:postgres": "docker compose -f docker-compose.yml -f docker-compose.postgres.yml down",
    "version-major": "npm version major",
    "version-minor": "npm version minor",
    "version-patch": "npm version patch",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "ajv": "^8.17.1",
    "better-sqlite3": "^12.5.0",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "chart.js": "^4.5.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.28.9",
    "marked": "^17.0.1",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.2.0",
    "reactflow": "^11.11.4",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.3",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.13.0",
    "yargs": "^17.7.2",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/date-fns": "^2.5.3",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^22.12.0",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.1",
    "@types/ws": "^8.5.4",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.0",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "data/*.json": [
      "prettier --write"
    ]
  }
}
