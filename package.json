{
  "name": "lemud",
  "version": "0.0.1",
  "description": "Elly Mud / LLM Engineered Multi User Dungeon",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --build --verbose",
    "start": "tsc --sourceMap && node --enable-source-maps dist/server.js",
    "start:admin": "tsc --sourceMap && node --enable-source-maps dist/server.js -af",
    "start:user": "tsc --sourceMap && node --enable-source-maps dist/server.js -u",
    "dev": "ts-node-dev --transpile-only --respawn src/server.ts",
    "watch": "ts-node-dev --transpile-only --respawn --watch src src/server.ts",
    "watch:admin": "ts-node-dev --transpile-only --respawn --watch src src/server.ts -- -af",
    "watch:user": "ts-node-dev --transpile-only --respawn --watch src src/server.ts -- -u",
    "start:mcp": "ts-node-dev --transpile-only src/mcp/index.ts",
    "validate": "ts-node-dev --transpile-only src/utils/validateFiles.ts"
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "ajv": "^8.17.1",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.13.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0",
    "yargs": "^17.7.2",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/date-fns": "^2.5.3",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.1",
    "@types/ws": "^8.5.4",
    "@types/yargs": "^17.0.33",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
