{
  "name": "ellymud",
  "version": "1.0.1",
  "description": "Elly Mud / LLM Engineered Multi User Dungeon",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --build --verbose && echo '✓ BUILD SUCCESS' || (echo '✗ BUILD FAILED' && exit 1)",
    "build-watch": "tsc --build --watch",
    "clean": "rm -rf dist",
    "clean-all": "rm -rf dist node_modules",
    "prebuild": "npm run clean",
    "start": "node --enable-source-maps dist/server.js",
    "prestart": "npm run build",
    "start-admin": "npm run build && node --enable-source-maps dist/server.js -af",
    "start-user": "npm run build && node --enable-source-maps dist/server.js -u",
    "prod": "npm run build && NODE_ENV=production node --enable-source-maps dist/server.js",
    "dev": "ts-node-dev --transpile-only --respawn src/server.ts",
    "dev-admin": "ts-node-dev --transpile-only --respawn src/server.ts -- -af",
    "dev-user": "ts-node-dev --transpile-only --respawn src/server.ts -- -u",
    "watch": "tsc --watch",
    "validate": "ts-node-dev --transpile-only src/utils/validateFiles.ts",
    "typecheck": "tsc --noEmit",
    "test": "npm run typecheck && npm run validate && jest",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test-agents": ".github/agents/agent-tests/run-tests.sh",
    "test-agents-dry": ".github/agents/agent-tests/run-tests.sh --dry-run",
    "test-agents-list": ".github/agents/agent-tests/run-tests.sh --show-tests",
    "test-agents-validate": ".github/agents/agent-tests/run-tests.sh --validate",
    "lint": "eslint 'src/**/*.ts' --max-warnings 0",
    "lint-fix": "eslint 'src/**/*.ts' --fix",
    "check-paired-docs": "./scripts/check-paired-docs.sh --all",
    "check-paired-docs-staged": "./scripts/check-paired-docs.sh --staged",
    "format": "prettier --write 'src/**/*.ts'",
    "format-check": "prettier --check 'src/**/*.ts'",
    "ci": "npm run lint && npm run typecheck && npm run validate && npm run build",
    "outdated": "npm outdated",
    "deps-check": "npx depcheck",
    "version-patch": "npm version patch",
    "version-minor": "npm version minor",
    "version-major": "npm version major",
    "release": "npm run ci && npm version patch && git push --follow-tags",
    "prepare": "husky"
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "ajv": "^8.17.1",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.13.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0",
    "yargs": "^17.7.2",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/date-fns": "^2.5.3",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.1",
    "@types/ws": "^8.5.4",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.0",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --max-warnings 0",
      "prettier --check"
    ],
    "data/*.json": [
      "prettier --check"
    ]
  }
}
